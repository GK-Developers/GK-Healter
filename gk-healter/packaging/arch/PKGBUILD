# Maintainer: GK Developers <vastseaoffical0@outlook.com>
pkgname=gk-healter
pkgver=0.1.0
pkgrel=1
pkgdesc="A lightweight and safe system cleaning utility for Linux"
arch=('any')
url="https://github.com/GK-Developers/GK-Healter"
license=('MIT')
depends=(
  'python'
  'python-gobject'
  'gtk3'
  'polkit'
)
makedepends=(
  'meson'
  'ninja'
)
optdepends=(
  'xprintidle: idle-time detection for auto-maintenance'
)
source=("${pkgname}-${pkgver}.tar.gz::${url}/archive/v${pkgver}.tar.gz")
sha256sums=('SKIP')

build() {
  cd "${pkgname}-${pkgver}"
  arch-meson . build
  meson compile -C build
}

package() {
  cd "${pkgname}-${pkgver}"
  meson install -C build --destdir "${pkgdir}"
}
