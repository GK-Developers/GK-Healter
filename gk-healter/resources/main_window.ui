<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.20"/>

  <!-- ════════════════════════════════════════════════════════════════════════
       DATA MODELS
       ════════════════════════════════════════════════════════════════════════ -->
  <object class="GtkListStore" id="file_list_store">
    <columns>
      <column type="gboolean"/>   <!-- 0: Toggle -->
      <column type="gchararray"/> <!-- 1: Category -->
      <column type="gchararray"/> <!-- 2: Description -->
      <column type="gchararray"/> <!-- 3: Size String -->
      <column type="gint64"/>     <!-- 4: Size Bytes (hidden) -->
      <column type="gchararray"/> <!-- 5: Path (hidden) -->
      <column type="gboolean"/>   <!-- 6: Is System (hidden) -->
    </columns>
  </object>

  <object class="GtkListStore" id="history_list_store">
    <columns>
      <column type="gchararray"/> <!-- 0: Date -->
      <column type="gchararray"/> <!-- 1: Categories -->
      <column type="gchararray"/> <!-- 2: Total Freed -->
      <column type="gchararray"/> <!-- 3: Status -->
    </columns>
  </object>

  <object class="GtkAdjustment" id="adj_idle">
    <property name="lower">5</property>
    <property name="upper">60</property>
    <property name="value">15</property>
    <property name="step_increment">5</property>
    <property name="page_increment">10</property>
  </object>

  <object class="GtkAdjustment" id="adj_disk">
    <property name="lower">50</property>
    <property name="upper">95</property>
    <property name="value">90</property>
    <property name="step_increment">5</property>
    <property name="page_increment">10</property>
  </object>

  <!-- ════════════════════════════════════════════════════════════════════════
       CSS PROVIDER (inline styling for dashboard cards)
       ════════════════════════════════════════════════════════════════════════ -->

  <!-- ════════════════════════════════════════════════════════════════════════
       MAIN WINDOW
       ════════════════════════════════════════════════════════════════════════ -->
  <object class="GtkWindow" id="main_window">
    <property name="can_focus">False</property>
    <property name="default_width">1100</property>
    <property name="default_height">700</property>

    <!-- Header Bar -->
    <child type="titlebar">
      <object class="GtkHeaderBar" id="header_bar">
        <property name="visible">True</property>
        <property name="show_close_button">True</property>
        <property name="title">GK Healter</property>
        <property name="subtitle">System Health &amp; Cleaner</property>

        <!-- Left: About -->
        <child>
          <object class="GtkButton" id="btn_about">
            <property name="visible">True</property>
            <property name="can_focus">True</property>
            <signal name="clicked" handler="on_about_clicked" swapped="no"/>
            <child>
              <object class="GtkImage">
                <property name="visible">True</property>
                <property name="icon_name">help-about-symbolic</property>
              </object>
            </child>
          </object>
          <packing>
            <property name="pack_type">start</property>
          </packing>
        </child>

        <!-- Right: Refresh Health -->
        <child>
          <object class="GtkButton" id="btn_header_refresh">
            <property name="visible">True</property>
            <property name="can_focus">True</property>
            <property name="tooltip_text">Refresh</property>
            <signal name="clicked" handler="on_header_refresh_clicked" swapped="no"/>
            <child>
              <object class="GtkImage">
                <property name="visible">True</property>
                <property name="icon_name">view-refresh-symbolic</property>
              </object>
            </child>
          </object>
          <packing>
            <property name="pack_type">end</property>
          </packing>
        </child>
      </object>
    </child>

    <!-- Main Content: Sidebar + Stack -->
    <child>
      <object class="GtkBox">
        <property name="visible">True</property>
        <property name="orientation">horizontal</property>

        <!-- Sidebar -->
        <child>
          <object class="GtkStackSidebar" id="sidebar">
            <property name="visible">True</property>
            <property name="stack">content_stack</property>
            <property name="width_request">200</property>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">True</property>
          </packing>
        </child>

        <!-- Vertical separator -->
        <child>
          <object class="GtkSeparator">
            <property name="visible">True</property>
            <property name="orientation">vertical</property>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">False</property>
          </packing>
        </child>

        <!-- Content Stack -->
        <child>
          <object class="GtkStack" id="content_stack">
            <property name="visible">True</property>
            <property name="transition_type">crossfade</property>
            <property name="transition_duration">250</property>

            <!-- ══════════════════════════════════════════════════════════════
                 PAGE 1: DASHBOARD
                 ══════════════════════════════════════════════════════════════ -->
            <child>
              <object class="GtkScrolledWindow">
                <property name="visible">True</property>
                <property name="hscrollbar_policy">never</property>
                <child>
                  <object class="GtkViewport">
                    <property name="visible">True</property>
                    <property name="shadow_type">none</property>
                    <child>
                      <object class="GtkBox" id="dashboard_page">
                        <property name="visible">True</property>
                        <property name="orientation">vertical</property>
                        <property name="spacing">24</property>
                        <property name="margin">24</property>

                        <!-- Welcome / Score Header -->
                        <child>
                          <object class="GtkBox">
                            <property name="visible">True</property>
                            <property name="orientation">vertical</property>
                            <property name="spacing">8</property>
                            <child>
                              <object class="GtkLabel" id="lbl_welcome">
                                <property name="visible">True</property>
                                <property name="label">System Overview</property>
                                <property name="xalign">0</property>
                                <attributes>
                                  <attribute name="weight" value="bold"/>
                                  <attribute name="scale" value="1.6"/>
                                </attributes>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="lbl_welcome_sub">
                                <property name="visible">True</property>
                                <property name="label">Your system health at a glance</property>
                                <property name="xalign">0</property>
                                <style>
                                  <class name="dim-label"/>
                                </style>
                              </object>
                            </child>
                          </object>
                        </child>

                        <!-- Health Score Card -->
                        <child>
                          <object class="GtkFrame" id="frame_score">
                            <property name="visible">True</property>
                            <property name="shadow_type">none</property>
                            <style><class name="card-elevated"/></style>
                            <child>
                              <object class="GtkBox">
                                <property name="visible">True</property>
                                <property name="orientation">horizontal</property>
                                <property name="spacing">24</property>
                                <property name="margin">20</property>

                                <!-- Score number -->
                                <child>
                                  <object class="GtkBox">
                                    <property name="visible">True</property>
                                    <property name="orientation">vertical</property>
                                    <property name="valign">center</property>
                                    <property name="spacing">4</property>
                                    <child>
                                      <object class="GtkLabel" id="lbl_score_value">
                                        <property name="visible">True</property>
                                        <property name="label">--</property>
                                        <attributes>
                                          <attribute name="weight" value="bold"/>
                                          <attribute name="scale" value="3.0"/>
                                        </attributes>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="visible">True</property>
                                        <property name="label">/ 100</property>
                                        <style>
                                          <class name="dim-label"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                  <packing>
                                    <property name="expand">False</property>
                                  </packing>
                                </child>

                                <!-- Separator -->
                                <child>
                                  <object class="GtkSeparator">
                                    <property name="visible">True</property>
                                    <property name="orientation">vertical</property>
                                  </object>
                                  <packing>
                                    <property name="expand">False</property>
                                  </packing>
                                </child>

                                <!-- Score details -->
                                <child>
                                  <object class="GtkBox">
                                    <property name="visible">True</property>
                                    <property name="orientation">vertical</property>
                                    <property name="valign">center</property>
                                    <property name="spacing">6</property>
                                    <child>
                                      <object class="GtkLabel" id="lbl_score_status">
                                        <property name="visible">True</property>
                                        <property name="label">Calculating...</property>
                                        <property name="xalign">0</property>
                                        <attributes>
                                          <attribute name="weight" value="bold"/>
                                          <attribute name="scale" value="1.2"/>
                                        </attributes>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel" id="lbl_score_detail">
                                        <property name="visible">True</property>
                                        <property name="label">Monitoring system resources...</property>
                                        <property name="xalign">0</property>
                                        <property name="wrap">True</property>
                                        <style>
                                          <class name="dim-label"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                  <packing>
                                    <property name="expand">True</property>
                                    <property name="fill">True</property>
                                  </packing>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>

                        <!-- Resource Meters Row -->
                        <child>
                          <object class="GtkGrid" id="grid_meters">
                            <property name="visible">True</property>
                            <property name="column_homogeneous">True</property>
                            <property name="column_spacing">12</property>
                            <property name="row_spacing">6</property>

                            <!-- CPU Card -->
                            <child>
                              <object class="GtkFrame">
                                <property name="visible">True</property>
                                <property name="shadow_type">none</property>
                                <style><class name="resource-card"/></style>
                                <child>
                                  <object class="GtkBox">
                                    <property name="visible">True</property>
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">6</property>
                                    <property name="margin">12</property>
                                    <child>
                                      <object class="GtkBox">
                                        <property name="visible">True</property>
                                        <property name="spacing">8</property>
                                        <child>
                                          <object class="GtkImage">
                                            <property name="visible">True</property>
                                            <property name="icon_name">computer-symbolic</property>
                                            <property name="pixel_size">16</property>
                                            <style><class name="dim-label"/></style>
                                          </object>
                                        </child>
                                        <child>
                                          <object class="GtkLabel" id="lbl_dash_cpu_title">
                                            <property name="visible">True</property>
                                            <property name="label">CPU</property>
                                            <property name="xalign">0</property>
                                            <attributes>
                                              <attribute name="weight" value="bold"/>
                                            </attributes>
                                          </object>
                                          <packing>
                                            <property name="expand">True</property>
                                          </packing>
                                        </child>
                                        <child>
                                          <object class="GtkLabel" id="lbl_dash_cpu_val">
                                            <property name="visible">True</property>
                                            <property name="label">--%</property>
                                            <property name="xalign">1</property>
                                            <attributes>
                                              <attribute name="weight" value="bold"/>
                                            </attributes>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLevelBar" id="level_dash_cpu">
                                        <property name="visible">True</property>
                                        <property name="min_value">0</property>
                                        <property name="max_value">100</property>
                                        <property name="value">0</property>
                                        <property name="height_request">8</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                              <packing>
                                <property name="left_attach">0</property>
                                <property name="top_attach">0</property>
                              </packing>
                            </child>

                            <!-- RAM Card -->
                            <child>
                              <object class="GtkFrame">
                                <property name="visible">True</property>
                                <property name="shadow_type">none</property>
                                <style><class name="resource-card"/></style>
                                <child>
                                  <object class="GtkBox">
                                    <property name="visible">True</property>
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">6</property>
                                    <property name="margin">12</property>
                                    <child>
                                      <object class="GtkBox">
                                        <property name="visible">True</property>
                                        <property name="spacing">8</property>
                                        <child>
                                          <object class="GtkImage">
                                            <property name="visible">True</property>
                                            <property name="icon_name">emblem-system-symbolic</property>
                                            <property name="pixel_size">16</property>
                                            <style><class name="dim-label"/></style>
                                          </object>
                                        </child>
                                        <child>
                                          <object class="GtkLabel" id="lbl_dash_ram_title">
                                            <property name="visible">True</property>
                                            <property name="label">Memory</property>
                                            <property name="xalign">0</property>
                                            <attributes>
                                              <attribute name="weight" value="bold"/>
                                            </attributes>
                                          </object>
                                          <packing>
                                            <property name="expand">True</property>
                                          </packing>
                                        </child>
                                        <child>
                                          <object class="GtkLabel" id="lbl_dash_ram_val">
                                            <property name="visible">True</property>
                                            <property name="label">--%</property>
                                            <property name="xalign">1</property>
                                            <attributes>
                                              <attribute name="weight" value="bold"/>
                                            </attributes>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLevelBar" id="level_dash_ram">
                                        <property name="visible">True</property>
                                        <property name="min_value">0</property>
                                        <property name="max_value">100</property>
                                        <property name="value">0</property>
                                        <property name="height_request">8</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                              <packing>
                                <property name="left_attach">1</property>
                                <property name="top_attach">0</property>
                              </packing>
                            </child>

                            <!-- Disk Card -->
                            <child>
                              <object class="GtkFrame">
                                <property name="visible">True</property>
                                <property name="shadow_type">none</property>
                                <style><class name="resource-card"/></style>
                                <child>
                                  <object class="GtkBox">
                                    <property name="visible">True</property>
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">6</property>
                                    <property name="margin">12</property>
                                    <child>
                                      <object class="GtkBox">
                                        <property name="visible">True</property>
                                        <property name="spacing">8</property>
                                        <child>
                                          <object class="GtkImage">
                                            <property name="visible">True</property>
                                            <property name="icon_name">drive-harddisk-symbolic</property>
                                            <property name="pixel_size">16</property>
                                            <style><class name="dim-label"/></style>
                                          </object>
                                        </child>
                                        <child>
                                          <object class="GtkLabel" id="lbl_dash_disk_title">
                                            <property name="visible">True</property>
                                            <property name="label">Disk</property>
                                            <property name="xalign">0</property>
                                            <attributes>
                                              <attribute name="weight" value="bold"/>
                                            </attributes>
                                          </object>
                                          <packing>
                                            <property name="expand">True</property>
                                          </packing>
                                        </child>
                                        <child>
                                          <object class="GtkLabel" id="lbl_dash_disk_val">
                                            <property name="visible">True</property>
                                            <property name="label">--%</property>
                                            <property name="xalign">1</property>
                                            <attributes>
                                              <attribute name="weight" value="bold"/>
                                            </attributes>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLevelBar" id="level_dash_disk">
                                        <property name="visible">True</property>
                                        <property name="min_value">0</property>
                                        <property name="max_value">100</property>
                                        <property name="value">0</property>
                                        <property name="height_request">8</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                              <packing>
                                <property name="left_attach">2</property>
                                <property name="top_attach">0</property>
                              </packing>
                            </child>
                          </object>
                        </child>

                        <!-- Quick Action Cards -->
                        <child>
                          <object class="GtkLabel" id="lbl_quick_actions_title">
                            <property name="visible">True</property>
                            <property name="label">Quick Actions</property>
                            <property name="xalign">0</property>
                            <property name="margin_top">8</property>
                            <attributes>
                              <attribute name="weight" value="bold"/>
                              <attribute name="scale" value="1.2"/>
                            </attributes>
                          </object>
                        </child>

                        <child>
                          <object class="GtkGrid" id="grid_actions">
                            <property name="visible">True</property>
                            <property name="column_homogeneous">True</property>
                            <property name="column_spacing">16</property>
                            <property name="row_spacing">16</property>

                            <!-- Card: Scan & Clean -->
                            <child>
                              <object class="GtkButton" id="btn_dash_scan">
                                <property name="visible">True</property>
                                <property name="can_focus">True</property>
                                <property name="relief">none</property>
                                <signal name="clicked" handler="on_dash_scan_clicked" swapped="no"/>
                                <style><class name="card-button"/></style>
                                <child>
                                  <object class="GtkBox">
                                    <property name="visible">True</property>
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">8</property>
                                    <property name="margin">16</property>
                                    <child>
                                      <object class="GtkImage">
                                        <property name="visible">True</property>
                                        <property name="icon_name">edit-clear-all-symbolic</property>
                                        <property name="pixel_size">32</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel" id="lbl_dash_scan_title">
                                        <property name="visible">True</property>
                                        <property name="label">Scan &amp; Clean</property>
                                        <attributes>
                                          <attribute name="weight" value="bold"/>
                                        </attributes>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel" id="lbl_dash_scan_desc">
                                        <property name="visible">True</property>
                                        <property name="label">Find and remove junk files</property>
                                        <property name="wrap">True</property>
                                        <property name="justify">center</property>
                                        <style>
                                          <class name="dim-label"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                              <packing>
                                <property name="left_attach">0</property>
                                <property name="top_attach">0</property>
                              </packing>
                            </child>

                            <!-- Card: System Health -->
                            <child>
                              <object class="GtkButton" id="btn_dash_health">
                                <property name="visible">True</property>
                                <property name="can_focus">True</property>
                                <property name="relief">none</property>
                                <signal name="clicked" handler="on_dash_health_clicked" swapped="no"/>
                                <style><class name="card-button"/></style>
                                <child>
                                  <object class="GtkBox">
                                    <property name="visible">True</property>
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">8</property>
                                    <property name="margin">16</property>
                                    <child>
                                      <object class="GtkImage">
                                        <property name="visible">True</property>
                                        <property name="icon_name">utilities-system-monitor-symbolic</property>
                                        <property name="pixel_size">32</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel" id="lbl_dash_health_title">
                                        <property name="visible">True</property>
                                        <property name="label">System Health</property>
                                        <attributes>
                                          <attribute name="weight" value="bold"/>
                                        </attributes>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel" id="lbl_dash_health_desc">
                                        <property name="visible">True</property>
                                        <property name="label">Monitor CPU, RAM &amp; Disk</property>
                                        <property name="wrap">True</property>
                                        <property name="justify">center</property>
                                        <style>
                                          <class name="dim-label"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                              <packing>
                                <property name="left_attach">1</property>
                                <property name="top_attach">0</property>
                              </packing>
                            </child>

                            <!-- Card: Insights -->
                            <child>
                              <object class="GtkButton" id="btn_dash_insights">
                                <property name="visible">True</property>
                                <property name="can_focus">True</property>
                                <property name="relief">none</property>
                                <signal name="clicked" handler="on_dash_insights_clicked" swapped="no"/>
                                <style><class name="card-button"/></style>
                                <child>
                                  <object class="GtkBox">
                                    <property name="visible">True</property>
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">8</property>
                                    <property name="margin">16</property>
                                    <child>
                                      <object class="GtkImage">
                                        <property name="visible">True</property>
                                        <property name="icon_name">dialog-information-symbolic</property>
                                        <property name="pixel_size">32</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel" id="lbl_dash_insights_title">
                                        <property name="visible">True</property>
                                        <property name="label">Insights</property>
                                        <attributes>
                                          <attribute name="weight" value="bold"/>
                                        </attributes>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel" id="lbl_dash_insights_desc">
                                        <property name="visible">True</property>
                                        <property name="label">Services, logs &amp; recommendations</property>
                                        <property name="wrap">True</property>
                                        <property name="justify">center</property>
                                        <style>
                                          <class name="dim-label"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                              <packing>
                                <property name="left_attach">2</property>
                                <property name="top_attach">0</property>
                              </packing>
                            </child>
                          </object>
                        </child>

                        <!-- System State Summary -->
                        <child>
                          <object class="GtkFrame" id="frame_system_state">
                            <property name="visible">True</property>
                            <property name="shadow_type">none</property>
                            <style><class name="card-elevated"/></style>
                            <child>
                              <object class="GtkBox">
                                <property name="visible">True</property>
                                <property name="orientation">vertical</property>
                                <property name="margin">16</property>
                                <property name="spacing">10</property>
                                <child>
                                  <object class="GtkLabel" id="lbl_sysstate_title">
                                    <property name="visible">True</property>
                                    <property name="label">System State</property>
                                    <property name="xalign">0</property>
                                    <attributes>
                                      <attribute name="weight" value="bold"/>
                                    </attributes>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkGrid" id="grid_sysstate">
                                    <property name="visible">True</property>
                                    <property name="column_spacing">24</property>
                                    <property name="row_spacing">8</property>

                                    <child>
                                      <object class="GtkLabel">
                                        <property name="visible">True</property>
                                        <property name="label">Systemd State:</property>
                                        <property name="xalign">0</property>
                                        <style><class name="dim-label"/></style>
                                      </object>
                                      <packing>
                                        <property name="left_attach">0</property>
                                        <property name="top_attach">0</property>
                                      </packing>
                                    </child>
                                    <child>
                                      <object class="GtkLabel" id="lbl_systemd_state">
                                        <property name="visible">True</property>
                                        <property name="label">--</property>
                                        <property name="xalign">0</property>
