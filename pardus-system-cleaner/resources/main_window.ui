<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.20"/>
  <object class="GtkListStore" id="file_list_store">
    <columns>
      <!-- 0: Toggle -->
      <column type="gboolean"/>
      <!-- 1: Category -->
      <column type="gchararray"/>
      <!-- 2: Description -->
      <column type="gchararray"/>
      <!-- 3: Size String -->
      <column type="gchararray"/>
      <!-- 4: Size Bytes (Hidden) -->
      <column type="gint64"/>
      <!-- 5: Path (Hidden) -->
      <column type="gchararray"/>
      <!-- 6: Is System (Hidden) -->
      <column type="gboolean"/>
    </columns>
  </object>
  <object class="GtkListStore" id="history_list_store">
    <columns>
      <!-- 0: Date -->
      <column type="gchararray"/>
      <!-- 1: Categories -->
      <column type="gchararray"/>
      <!-- 2: Total Freed -->
      <column type="gchararray"/>
      <!-- 3: Status -->
      <column type="gchararray"/>
    </columns>
  </object>
  <object class="GtkWindow" id="main_window">
    <property name="can_focus">False</property>
    <property name="title" translatable="yes">Pardus Sistem Temizlik Aracı</property>
    <property name="default_width">900</property>
    <property name="default_height">650</property>
    <property name="border_width">10</property>
    <child type="titlebar">
      <object class="GtkHeaderBar">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <property name="title" translatable="yes">Pardus Temizleyici</property>
        <property name="show_close_button">True</property>
        <style>
            <class name="titlebar"/>
        </style>
        <child>
          <object class="GtkButton" id="btn_about">
            <property name="label" translatable="yes">Hakkında</property>
            <property name="visible">True</property>
            <property name="can_focus">True</property>
            <property name="receives_default">True</property>
            <signal name="clicked" handler="on_about_clicked" swapped="no"/>
          </object>
          <packing>
            <property name="pack_type">start</property>
          </packing>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <property name="orientation">vertical</property>
        <property name="spacing">10</property>
        
        <!-- Status InfoBar -->
        <child>
          <object class="GtkInfoBar" id="info_bar">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="message_type">info</property>
            <property name="revealed">True</property>
            <style>
                <class name="info-bar"/>
            </style>
            <child internal-child="content_area">
              <object class="GtkBox">
                <property name="can_focus">False</property>
                <property name="spacing">16</property>
                <child>
                  <object class="GtkLabel" id="info_label">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="label" translatable="yes">Sistem temizliği için analize hazır.</property>
                    <property name="wrap">True</property>
                  </object>
                  <packing>
                    <property name="expand">False</property>
                    <property name="fill">True</property>
                    <property name="position">0</property>
                  </packing>
                </child>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="fill">False</property>
                <property name="position">0</property>
              </packing>
            </child>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">True</property>
            <property name="position">0</property>
          </packing>
        </child>

        <child>
          <object class="GtkNotebook" id="notebook">
            <property name="visible">True</property>
            <property name="can_focus">True</property>
            
            <!-- Tab 1: Clean -->
            <child>
              <object class="GtkBox">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="orientation">vertical</property>
                <property name="spacing">10</property>
                <property name="margin">10</property>

                <!-- Main TreeView -->
                <child>
                  <object class="GtkScrolledWindow">
                    <property name="visible">True</property>
                    <property name="can_focus">True</property>
                    <property name="shadow_type">in</property>
                    <property name="min_content_height">350</property>
                    <child>
                      <object class="GtkTreeView" id="treeview">
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="model">file_list_store</property>
                        <child internal-child="selection">
                          <object class="GtkTreeSelection"/>
                        </child>
                        <!-- Column 1: Toggle -->
                        <child>
                          <object class="GtkTreeViewColumn">
                            <property name="title" translatable="yes">Seç</property>
                            <child>
                              <object class="GtkCellRendererToggle" id="renderer_toggle">
                                <signal name="toggled" handler="on_cell_toggled" swapped="no"/>
                              </object>
                              <attributes>
                                <attribute name="active">0</attribute>
                              </attributes>
                            </child>
                          </object>
                        </child>
                        <!-- Column 2: Category -->
                        <child>
                          <object class="GtkTreeViewColumn">
                            <property name="title" translatable="yes">Kategori</property>
                            <child>
                              <object class="GtkCellRendererText"/>
                              <attributes>
                                <attribute name="text">1</attribute>
                              </attributes>
                            </child>
                          </object>
                        </child>
                        <!-- Column 3: Description -->
                        <child>
                          <object class="GtkTreeViewColumn">
                            <property name="title" translatable="yes">Açıklama</property>
                            <child>
                              <object class="GtkCellRendererText"/>
                              <attributes>
                                <attribute name="text">2</attribute>
                              </attributes>
                            </child>
                          </object>
                        </child>
                        <!-- Column 4: Size -->
                        <child>
                          <object class="GtkTreeViewColumn">
                            <property name="title" translatable="yes">Boyut</property>
                            <child>
                              <object class="GtkCellRendererText"/>
                              <attributes>
                                <attribute name="text">3</attribute>
                              </attributes>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                  <packing>
                    <property name="expand">True</property>
                    <property name="fill">True</property>
                    <property name="position">0</property>
                  </packing>
                </child>

                <!-- Summary Label -->
                <child>
                  <object class="GtkLabel" id="summary_label">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="label" translatable="yes">Toplam Kazanç: 0 MB</property>
                    <property name="halign">end</property>
                    <style>
                        <class name="summary-label"/>
                    </style>
                  </object>
                  <packing>
                    <property name="expand">False</property>
                    <property name="fill">True</property>
                    <property name="position">1</property>
                  </packing>
                </child>

                <!-- Action Area -->
                <child>
                  <object class="GtkBox">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="spacing">10</property>
                    <property name="halign">end</property>
                    <child>
                      <object class="GtkButton" id="btn_scan">
                        <property name="label" translatable="yes">Sistemi Tara</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="receives_default">True</property>
                        <signal name="clicked" handler="on_scan_clicked" swapped="no"/>
                        <style>
                          <class name="suggested-action"/>
                        </style>
                      </object>
                      <packing>
                        <property name="expand">False</property>
                        <property name="fill">True</property>
                        <property name="position">0</property>
                      </packing>
                    </child>
                    <child>
                      <object class="GtkButton" id="btn_clean">
                        <property name="label" translatable="yes">Temizle</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="receives_default">True</property>
                        <property name="sensitive">False</property>
                        <signal name="clicked" handler="on_clean_clicked" swapped="no"/>
                        <style>
                          <class name="destructive-action"/>
                        </style>
                      </object>
                      <packing>
                        <property name="expand">False</property>
                        <property name="fill">True</property>
                        <property name="position">1</property>
                      </packing>
                    </child>
                  </object>
                  <packing>
                    <property name="expand">False</property>
                    <property name="fill">True</property>
                    <property name="position">2</property>
                  </packing>
                </child>
              </object>
            </child>
            <child type="tab">
              <object class="GtkLabel">
                <property name="visible">True</property>
                <property name="label" translatable="yes">Temizlik</property>
              </object>
            </child>

            <!-- Tab 2: History -->
            <child>
              <object class="GtkBox">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="orientation">vertical</property>
                <property name="spacing">10</property>
                <property name="margin">10</property>
                <child>
                  <object class="GtkScrolledWindow">
                    <property name="visible">True</property>
                    <property name="can_focus">True</property>
                    <property name="shadow_type">in</property>
                    <child>
                      <object class="GtkTreeView" id="history_treeview">
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="model">history_list_store</property>
                        <child internal-child="selection">
                          <object class="GtkTreeSelection"/>
                        </child>
                        <!-- Column 1: Date -->
                        <child>
                          <object class="GtkTreeViewColumn">
                            <property name="title" translatable="yes">Tarih</property>
                            <child>
                              <object class="GtkCellRendererText"/>
                              <attributes>
                                <attribute name="text">0</attribute>
                              </attributes>
                            </child>
                          </object>
                        </child>
                        <!-- Column 2: Categories -->
                        <child>
                          <object class="GtkTreeViewColumn">
                            <property name="title" translatable="yes">Kategoriler</property>
                            <child>
                              <object class="GtkCellRendererText"/>
                              <attributes>
                                <attribute name="text">1</attribute>
                              </attributes>
                            </child>
                          </object>
                        </child>
                        <!-- Column 3: Total Freed -->
                        <child>
                          <object class="GtkTreeViewColumn">
                            <property name="title" translatable="yes">Kazanç</property>
                            <child>
                              <object class="GtkCellRendererText"/>
                              <attributes>
                                <attribute name="text">2</attribute>
                              </attributes>
                            </child>
                          </object>
                        </child>
                        <!-- Column 4: Status -->
                        <child>
                          <object class="GtkTreeViewColumn">
                            <property name="title" translatable="yes">Durum</property>
                            <child>
                              <object class="GtkCellRendererText"/>
                              <attributes>
                                <attribute name="text">3</attribute>
                              </attributes>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                  <packing>
                    <property name="expand">True</property>
                    <property name="fill">True</property>
                    <property name="position">0</property>
                  </packing>
                </child>
              </object>
              <packing>
                <property name="position">1</property>
              </packing>
            </child>
            <child type="tab">
              <object class="GtkLabel">
                <property name="visible">True</property>
                <property name="label" translatable="yes">Temizlik Geçmişi</property>
              </object>
            </child>
          </object>
          <packing>
            <property name="expand">True</property>
            <property name="fill">True</property>
            <property name="position">1</property>
          </packing>
        </child>
      </object>
    </child>
  </object>

  <object class="GtkAboutDialog" id="about_dialog">
    <property name="can_focus">False</property>
    <property name="program_name">Pardus Sistem Temizlik Aracı</property>
    <property name="version">1.0</property>
    <property name="copyright">© 2026 Pardus Topluluğu</property>
    <property name="comments">Pardus kullanıcıları için güvenli ve kolay sistem temizleme aracı.</property>
    <property name="website">https://www.pardus.org.tr/</property>
    <property name="website_label">Pardus Website</property>
    <property name="authors">Mustafa GÖKPINAR
Pardus Geliştirici Ekibi</property>
    <property name="logo_icon_name">system-file-manager</property>
    <property name="type_hint">dialog</property>
    <property name="transient_for">main_window</property>
  </object>
  <object class="GtkMessageDialog" id="clean_confirm_dialog">
    <property name="can_focus">False</property>
    <property name="type_hint">dialog</property>
    <property name="transient_for">main_window</property>
    <property name="message_type">warning</property>
    <property name="buttons">ok-cancel</property>
    <property name="text" translatable="yes">Temizliği Onayla</property>
  </object>
</interface>
